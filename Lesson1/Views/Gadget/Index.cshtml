@model IEnumerable<Lesson1.Models.GadgetView>

@{
    ViewData["Title"] = "Index";
}

    <h1>Список товаров</h1>

    <ul>
        
        @foreach (var item in Model)
        {
            <li>@Html.ActionLink(@item.Firm + " " + @item.Name, "Сharacteristic", new { id = item.Id })</li>
        }
     </ul>


<style>
    *{
        margin: 0;
        padding: 0;
        font-family: sans-serif;
    }

    html,
    body{
        height: 100%;
    }

    ul{
        list-style-type: none;
        margin: 0px;
    }


    li{
        background-color: white;
        display: block;
        width: 200px;
        height: 30px;
        margin: 2px;
    }

    li h4:hover {
         background-color: darkgrey;
    }
</style>

