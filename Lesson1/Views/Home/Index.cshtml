@{
    ViewData["Title"] = "Главная страница";
}

@await Html.PartialAsync("_Partial/_Slider");

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    @await Html.PartialAsync("_Partial/_PanelGroup")

                    @await Html.PartialAsync("_Partial/_BrandsProducts")

                    @await Html.PartialAsync("_Partial/_PriceRange")

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("_Partial/_FeauturesItems")

                @await Html.PartialAsync("_Partial/_CategoryTab")

                @await Html.PartialAsync("_Partial/_RecommendedItems")

            </div>
        </div>
    </div>
</section>
