@model IEnumerable<WarehouseView>

@{
    ViewData["Title"] = "Warehouses";
}


<table class="table">

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Location</td>
        <td><a asp-action="WarehouseDetails" asp-route-id ="@item.Id"><i>Details</i></a></td>
        <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
        <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a></td>
    </tr>
    }
</table>
<a asp-action="Edit" class="btn btn-success">Добавить</a>